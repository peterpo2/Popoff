{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=tcp:main-vps,1433;Database=PopoffCrm;User Id=sa;Password=ChangeMe;TrustServerCertificate=True;"
  },
  "AppUrls": {
    "AllowedOrigins": "https://crm.popoff.com"
  },
  "CoreServers": [
    {
      "Name": "Main-VPS",
      "Ip": "10.10.10.5",
      "IsPrimary": true
    }
  ],
  "Docker": {
    "Enabled": true,
    "SocketPath": "/var/run/docker.sock"
  },
  "ExternalServers": {
    "Servers": [
      {
        "Name": "Main-VPS",
        "BaseUrl": "https://main-vps.popoff.com",
        "ApiKey": "set-in-production",
        "Type": "RemoteAgent"
      }
    ]
  },
  "Jwt": {
    "Issuer": "crm.popoff.com",
    "Audience": "crm.popoff.com",
    "Key": "",
    "ExpiryMinutes": 120
  },
  "HealthCheck": {
    "IntervalSeconds": 60,
    "TimeoutSeconds": 10,
    "AppendHealthPath": true,
    "HealthPath": "/health"
  }
}
